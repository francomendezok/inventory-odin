<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nude Inventory Project</title>
    <script>
        function redirectToItem(id) {
            // redirect URL /item/id
            window.location.href = `/item/${id}`;
        }
    </script>
</head>
<body>
    <%- include('header', { categories: categories }) %>
    <span><%= products.length %></span>
    <main id="all-products">
            <% products.forEach(function(product) { %>
                <div class="product-box" data-id="<%= product.id %>" onclick="redirectToItem('<%= product.id %>')">
                    <p><%= product.name %></p>
                    <p>Categorie: <%= product.categorie %></p>
                    <p>Size: <%= product.size %></p>
                    <p>Color: <%= product.color %></p>
                    <p>$<%= product.price %></p>
                </div>
            <% }); %>

    </main>
    <%- include('footer') %>
</body>
</html>

