<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= item.name %></title>
    <script>
        function redirectToEdit(id) {
            // Redirige a la URL /item/id
            window.location.href = `/edit/${id}`;
        }
        function redirectToDelete(id) {
            // Redirige a la URL /item/id
            window.location.href = `/delete/${id}`;
        }
    </script>
</head>
<body>
    <%- include('header', { categories: categories }) %>


    <main class="edit-main">
        <div id="item" data-id="<%= item.id %>">
            <p><%= item.name %></p>
            <p><%= item.categorie %></p>
            <p><%= item.size %></p>
            <p><%= item.color %></p>
            <p >$<%= item.price %></p>
        </div>
        <div id="edit-box" data-id="<%= item.id %>">
            <button onclick="redirectToEdit('<%= item.id %>')">Edit</button>
            <button onclick="redirectToDelete('<%= item.id %>')">Delete</button>
        </div>
    </main>

    <%- include('footer') %>
</body>
</html>